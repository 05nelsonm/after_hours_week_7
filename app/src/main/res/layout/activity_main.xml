<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <EditText
        android:id="@+id/et_number_input"
        android:hint="Enter Pokemon Number"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_name_input"
        android:hint="Enter Pokemon Name"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/et_number_input"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:text="Delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name_input"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:text="Create"
        app:layout_constraintLeft_toRightOf="@id/btn_delete"
        app:layout_constraintTop_toBottomOf="@id/et_name_input"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:text="Update"
        app:layout_constraintLeft_toRightOf="@id/btn_create"
        app:layout_constraintTop_toBottomOf="@id/et_name_input"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_pokemon_list"
        android:layout_width="match_parent"
        tools:listitem="@layout/pokemon_list_content"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>